---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;

type Rotation = "rotate-3" | "-rotate-3" | "rotate-6" | "-rotate-6" | "rotate-12" | "-rotate-12";

function generateRandomRotation(): Rotation {
	const rotations: Rotation[] = ["rotate-3", "-rotate-3", "rotate-6", "-rotate-6", "rotate-12", "-rotate-12"];
	return rotations[Math.floor(Math.random() * rotations.length)];
}
---
<a href={href} class={`group flex flex-col items-center space-y-2 p-4 rounded-lg transition-all duration-500 ease-in-out transform hover:scale-105 hover:${generateRandomRotation()}`}>
		<!-- background div with low zindex -->
		<div class="absolute inset-0 bg-gradient-to-br from-pink-300 to-indigo-400 rounded-lg opacity-0 transition-all duration-500 ease-in-out group-hover:opacity-75 -z-10"></div>
		<div class="p-2 bg-black bg-opacity-50 rounded-full">
			<slot/>
		</div>
		<h2 class="text-xl font-bold text-white">{title}</h2>
		<p class="text-zinc-200 dark:text-zinc-100 line-clamp-3">
			{body}
		</p>
</a>