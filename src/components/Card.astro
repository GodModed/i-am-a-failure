---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---
<a href={href} class="flex flex-col items-center space-y-2 border-gray-800 p-4 rounded-lg transition-all duration-300 ease-in-out hover:bg-gray-700 transform hover:scale-105 hover:rotate-3">
		<div class="p-2 bg-black bg-opacity-50 rounded-full">
			<slot/>
		</div>
		<h2 class="text-xl font-bold text-white">{title}</h2>
		<p class="text-zinc-200 dark:text-zinc-100">
			{body}
		</p>
</a>