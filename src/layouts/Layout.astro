---
import { ViewTransitions, slide } from "astro:transitions";
import "@fontsource-variable/inter";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
    lang="en"
    transition:animate={slide({
        duration: "2s",
    })}
>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="I am a failure." />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions fallback="animate" />
    </head>
    <body>
        <section
            class="w-full py-6 md:py-12 lg:py-16 xl:py-24 h-screen flex justify-center"
        >
            <div class="container px-4 md:px-6">
                <div class="grid gap-6 items-center">
                    <div
                        class="flex flex-col justify-center space-y-8 text-center"
                    >
                        <slot />
                    </div>
                </div>
            </div>
        </section>
        <style is:global>
            html {
                background: #000;
                font-family: "Inter Variable", sans-serif, system-ui;
                overflow-x: hidden;
            }

            html::-webkit-scrollbar {
                background-color: transparent;
                width: 6px;
            }

            /* background of the scrollbar except button or resizer */
            html::-webkit-scrollbar-track {
                background-color: transparent;
            }

            /* scrollbar itself */
            html::-webkit-scrollbar-thumb {
                background-color: rgb(191, 191, 191);
                border-radius: 16px;
                border: 4px solid transparent;
            }

            /* set button(top and bottom of the scrollbar) */
            html::-webkit-scrollbar-button {
                display:none;
            }
        </style>
    </body>
</html>
